@import '../common/index.wxss';

.van-switch {
  /* float :right; */
  height: 1em;
  width: 1.6em;
  display: inline-block;
  position: relative;
  background: #eeeeee;
  box-sizing: content-box;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 1em;
  right: 10rpx;
  top: 10rpx;
}

.van-switch__node {
  top: 0;
  left: 0;
  z-index: 1;
  width: 1em;
  height: 1em;
  transition: 0.3s;
  position: absolute;
  border-radius: 100%;
  background-color: #fff;
  box-shadow: 0 3px 1px 0 rgba(0, 0, 0, 0.05),
                0 2px 2px 0 rgba(0, 0, 0, 0.1),
                0 3px 3px 0 rgba(0, 0, 0, 0.05);
}

.van-switch__loading {
  top: 25%;
  left: 25%;
  width: 50%;
  height: 50%;
  position: absolute;
}

.van-switch--on {
  background-color: #ff6600;
}

.van-switch--on .van-switch__node {
  -webkit-transform: translateX(0.6em);
  transform: translateX(0.6em);
}

.van-switch--disabled {
  opacity: 0.4;
}
